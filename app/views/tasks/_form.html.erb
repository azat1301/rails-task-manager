<%= form_for(@task) do |f| %>
  <div class="form-group m-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control ' %>
  </div>
  <div class="form-group m-3">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control'%>
  </div>
<%= f.submit class: 'btn btn-primary mx-3' %>
<% end %>
<%= link_to 'Back to list', tasks_path, class: 'btn btn-light m-3' %>
