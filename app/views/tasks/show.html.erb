<div class="container mt-3">
  <h1><%= @task.title %></h1>
  <p><%= @task.details%></p>
  <% if @task.completed %>
    <div class="d-flex justify-content-start">
      <i class="far fa-check-square p-3"></i>
      <p>This task is completed</p>
    </div>
  <% else %>
    <div class="d-flex justify-content-start">
      <i class="far fa-square p-3"></i>
      <p>This task is not completed yet</p>
    </div>
  <% end %>
  <%= link_to 'Back to list', tasks_path, class: 'btn btn-secondary' %>
  <%= link_to 'Update task', edit_task_path(@task), class: 'btn btn-primary'%>
  <%= link_to task_path(@task), method: :delete, class: 'btn btn-light', data: { confirm: "Are you sure you want to delete #{@task.title}?" } do %>
    <i class="fas fa-trash"></i>
  <% end %>
</div>
